{
    "name": "VAE",
    "n_gpu": 0,
    "arch": {
        "type": "VAE",
        "args": {
            "n_input": 3005,
            "n_labels": 7,
            "n_continuous_cov": 0,
            "n_hidden": 128,
            "n_latent": 10,
            "n_layers": 1
        }
    },
    "data_loader": {
        "type": "CortexDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.01,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "ELBO",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1,
            "gamma": 1
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}